@model Library.Web.Models.EntityModels.ReviewViewModel
@{
    ViewData["Title"] = "AfisareReview";
    Layout = "../Shared/_Layout.cshtml";
}

<html>
<body>
    <div class="titlu">
        <h2>AfisareReview</h2>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    ImprumutId
                </th>
                <th>
                    ReviewId
                </th>
                <th>
                    Text
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.REVIEWs)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ImprumutId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ReviewId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Text)
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div>
        <a asp-area="" asp-controller="Home" asp-action="Index">Back to Home</a>
    </div>
</body>
</html>
