@model Library.Web.Models.EntityModels.BookViewModel
@{
    ViewBag.Title = "Display Books";
    Layout = "../Shared/_Layout.cshtml";
}


<html>
<body>
    <div class="titlu">
        <h2>List of Books</h2>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    CarteId
                </th>
                <th>
                    Titlu Carte
                </th>
                <th>
                    AutorId
                </th>
                <th>
                    GenId
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model.CARTEs)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => book.CarteId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => book.Titlu)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => book.AutorId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => book.GenId)
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div>
        <a asp-area="" asp-controller="Home" asp-action="Index">Back to Home</a>
    </div>
</body>
</html>
